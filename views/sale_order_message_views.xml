<!-- views/sale_order_message_views.xml -->
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_message_view_form" model="ir.ui.view">
        <field name="name">sale.order.message.view.form</field>
        <field name="model">sale.order.message</field>
        <field name="arch" type="xml">
            <form string="Message de Commande">
                <group>
                    <field name="name"/>
                    <field name="message"/>
                    <field name="sale_order_id" invisible="1"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
